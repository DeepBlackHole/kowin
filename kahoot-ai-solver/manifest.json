{
  "manifest_version": 3,
  "name": "Kahoot AI Solver",
  "version": "1.0.0",
  "description": "Automatically detects Kahoot questions, uses AI to find answers, and highlights the correct choice",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kahoot AI Solver"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.kahoot.it/*",
        "*://kahoot.it/*",
        "*://*.kahoot.com/*",
        "*://kahoot.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
